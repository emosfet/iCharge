<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/order_charge_allpage_bg"
              android:orientation="vertical" >

        <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/order_charge_title_bg"
                android:gravity="center"
                android:text="预约充电"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/all_page_title_text_size" />




    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="101dp"
            android:layout_margin="10dp"
            android:background="@drawable/corners_bg"
            android:orientation="vertical"

            android:padding="10dp" >




        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" >



            <TextView
                    android:layout_width="@dimen/order_charge_line_w"
                    android:layout_height="@dimen/order_charge_line_h"
                    android:layout_marginLeft="14dp"
                    android:text="到达时间"
                    android:textColor="#000"
                    android:textSize="@dimen/all_page_sub_text_size" />

            <EditText
                    android:id="@+id/inputDate"
                    android:layout_width="@dimen/order_charge_line_edit_w"
                    android:layout_height="@dimen/order_charge_line_edit_h"
                    android:layout_gravity="center"
                    android:background="@color/main_activity_categories_bg"
                    android:textColor="@color/order_charge_text_color"
                    android:focusable="false"
                    android:inputType="none" />

        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="4dp"
                    android:background="@color/person_divider"
                    />

        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" >



            <TextView
                    android:layout_width="@dimen/order_charge_line_w"
                    android:layout_height="@dimen/order_charge_line_h"
                    android:layout_marginLeft="14dp"
                    android:text="离开时间"
                    android:textColor="#000"
                    android:textSize="@dimen/all_page_sub_text_size" />

            <EditText
                    android:id="@+id/inputDate2"
                    android:layout_width="@dimen/order_charge_line_edit_w"
                    android:layout_height="@dimen/order_charge_line_edit_h"
                    android:layout_gravity="center"
                    android:textColor="@color/order_charge_text_color"
                    android:focusable="false"
                    android:background="@color/main_activity_categories_bg"
                    android:inputType="none" />

        </LinearLayout>
    </LinearLayout>







    <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/corners_bg"
            android:gravity="center_vertical"
            android:padding="10dp" >


        <TextView

                android:layout_width="@dimen/order_charge_line_w"
                android:layout_height="@dimen/order_charge_line_h"
                android:layout_marginLeft="14dp"
                android:text="充电地点"
                android:textColor="#000"
                android:textSize="@dimen/all_page_sub_text_size" />
        <EditText
                android:id="@+id/charge_place"
                android:layout_width="@dimen/order_charge_line_edit_w"
                android:layout_height="@dimen/order_charge_line_edit_h"
                android:background="@color/main_activity_categories_bg"
                android:textColor="@color/order_charge_text_color"
                android:focusable="false"
                android:inputType="none" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/login_div"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/corners_bg"
            android:gravity="center_vertical"
            android:padding="10dp" >


        <TextView
                android:id="@+id/textView2"
                android:layout_width="@dimen/order_charge_line_w"
                android:layout_height="@dimen/order_charge_line_h"
                android:layout_marginLeft="14dp"
                android:text="手机号"
                android:textColor="@color/order_charge_text_color"
                android:textSize="@dimen/all_page_sub_text_size" />
        <EditText
                android:id="@+id/no"
                android:layout_width="@dimen/order_charge_line_edit_w"
                android:layout_height="@dimen/order_charge_line_edit_h"
                android:focusable="true"
                android:background="@color/main_activity_categories_bg"
                android:textColor="@color/order_charge_text_color"
                android:inputType="number" />
    </LinearLayout>

 <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:gravity="center"
         >

     <Button
             android:id="@+id/order_charge"
             android:layout_width="240dp"
             android:layout_height="50dp"
             android:gravity="center"
             android:text="预约"
             android:textSize="25dp"
             android:background="@color/order_charge_title_bg"
             />

 </LinearLayout>

</LinearLayout>